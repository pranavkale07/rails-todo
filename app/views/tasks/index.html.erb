<%= render "shared/flash_message" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">All Tasks</h2>
    <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
  </div>

  <% if @tasks.any? %>
    <div class="list-group shadow-sm">
      <% @tasks.each do |task| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1"><%= task.title %></h5>
            <p class="mb-1 text-muted"><%= truncate(task.description, length: 100) %></p>
            <small class="text-muted">Created: <%= task.created_at.strftime("%b %d, %Y") %></small>
          </div>
          <div class="btn-group">
            <%= link_to "Show", task_path(task), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Delete", task_path(task), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">No tasks found. <%= link_to "Create one?", new_task_path %></p>
  <% end %>
</div>
