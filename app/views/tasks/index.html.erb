<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">My Tasks</h1>
      <small class="text-muted">Organize your day, achieve your goals</small>
    </div>
    <div>
      <%= link_to "+ New Task", new_task_path, class: "btn btn-primary me-2" %>
      <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row mb-4">
    <div class="col text-center">
      <div class="card">
        <div class="card-body">
          <div class="fs-4 text-primary"><%= @tasks.count %></div>
          <div class="text-muted">Total Tasks</div>
        </div>
      </div>
    </div>
    <div class="col text-center">
      <div class="card">
        <div class="card-body">
          <div class="fs-4 text-success"><%= @tasks.completed.count %></div>
          <div class="text-muted">Completed</div>
        </div>
      </div>
    </div>
    <div class="col text-center">
      <div class="card">
        <div class="card-body">
          <div class="fs-4 text-warning"><%= @tasks.pending.count %></div>
          <div class="text-muted">Pending</div>
        </div>
      </div>
    </div>
    <div class="col text-center">
      <div class="card">
        <div class="card-body">
          <div class="fs-4 text-danger"><%= @tasks.overdue.count %></div>
          <div class="text-muted">Overdue</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <%= form_with url: tasks_path, method: :get, class: "mb-4" do |f| %>
    <div class="d-flex gap-2">
      <div class="input-group">
        <span class="input-group-text bg-white">
          <i class="bi bi-tag"></i>
        </span>
        <%= select_tag :category, 
            options_for_select(
              ["All Categories"] + 
              Task.distinct.pluck(:category).compact.reject(&:blank?).push("Uncategorized").sort,
              selected: params[:category]
            ), 
            class: "form-select border-start-0",
            style: "padding-left: 0;" %>
      </div>

      <div class="input-group">
        <span class="input-group-text bg-white">
          <i class="bi bi-flag"></i>
        </span>
        <%= select_tag :priority, 
            options_for_select(["All Priorities"] + Task::PRIORITIES.values.map(&:humanize), selected: params[:priority]), 
            class: "form-select border-start-0",
            style: "padding-left: 0;" %>
      </div>

      <div class="input-group">
        <span class="input-group-text bg-white">
          <i class="bi bi-check2-circle"></i>
        </span>
        <%= select_tag :status, 
            options_for_select(["All Statuses"] + Task::STATUSES.map(&:humanize), selected: params[:status]), 
            class: "form-select border-start-0",
            style: "padding-left: 0;" %>
      </div>

      <%= f.submit "Apply Filters", class: "btn btn-primary" %>
      <%= link_to tasks_path, 
          class: "btn btn-outline-secondary", 
          title: "Reset Filters",
          data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
        <i class="bi bi-x-circle"></i>
      <% end %>
    </div>
  <% end %>

  <!-- Task Table -->
  <% if @tasks.any? %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th style="width: 40px"></th>
            <th style="cursor: pointer;" onclick="window.location='<%= tasks_path(sort: "title", direction: @sort_column == "title" && @sort_direction == "asc" ? "desc" : "asc", category: params[:category], priority: params[:priority], status: params[:status]) %>'">
              <div class="d-flex align-items-center">
                Title
                <span class="ms-2">
                  <% if @sort_column == "title" %>
                    <i class="fas fa-sort-<%= @sort_direction == "asc" ? "up" : "down" %>"></i>
                  <% else %>
                    <i class="fas fa-sort"></i>
                  <% end %>
                </span>
              </div>
            </th>
            <th style="cursor: pointer;" onclick="window.location='<%= tasks_path(sort: "category", direction: @sort_column == "category" && @sort_direction == "asc" ? "desc" : "asc", category: params[:category], priority: params[:priority], status: params[:status]) %>'">
              <div class="d-flex align-items-center">
                Category
                <span class="ms-2">
                  <% if @sort_column == "category" %>
                    <i class="fas fa-sort-<%= @sort_direction == "asc" ? "up" : "down" %>"></i>
                  <% else %>
                    <i class="fas fa-sort"></i>
                  <% end %>
                </span>
              </div>
            </th>
            <th style="cursor: pointer;" onclick="window.location='<%= tasks_path(sort: "priority", direction: @sort_column == "priority" && @sort_direction == "asc" ? "desc" : "asc", category: params[:category], priority: params[:priority], status: params[:status]) %>'">
              <div class="d-flex align-items-center">
                Priority
                <span class="ms-2">
                  <% if @sort_column == "priority" %>
                    <i class="fas fa-sort-<%= @sort_direction == "asc" ? "up" : "down" %>"></i>
                  <% else %>
                    <i class="fas fa-sort"></i>
                  <% end %>
                </span>
              </div>
            </th>
            <th style="cursor: pointer;" onclick="window.location='<%= tasks_path(sort: "status", direction: @sort_column == "status" && @sort_direction == "asc" ? "desc" : "asc", category: params[:category], priority: params[:priority], status: params[:status]) %>'">
              <div class="d-flex align-items-center">
                Status
                <span class="ms-2">
                  <% if @sort_column == "status" %>
                    <i class="fas fa-sort-<%= @sort_direction == "asc" ? "up" : "down" %>"></i>
                  <% else %>
                    <i class="fas fa-sort"></i>
                  <% end %>
                </span>
              </div>
            </th>
            <th style="cursor: pointer;" onclick="window.location='<%= tasks_path(sort: "due_date", direction: @sort_column == "due_date" && @sort_direction == "asc" ? "desc" : "asc", category: params[:category], priority: params[:priority], status: params[:status]) %>'">
              <div class="d-flex align-items-center">
                Due Date
                <span class="ms-2">
                  <% if @sort_column == "due_date" %>
                    <i class="fas fa-sort-<%= @sort_direction == "asc" ? "up" : "down" %>"></i>
                  <% else %>
                    <i class="fas fa-sort"></i>
                  <% end %>
                </span>
              </div>
            </th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td class="text-center align-middle">
                <%= check_box_tag "task_#{task.id}", 
                    "1", 
                    task.status == "completed",
                    class: "form-check-input task-complete-checkbox",
                    data: { 
                      task_id: task.id,
                      remote: true,
                      url: toggle_status_task_path(task)
                    } %>
              </td>
              <td>
                <%= link_to task.title, task, class: "text-decoration-none" %>
                <% if task.description.present? %>
                  <small class="text-muted d-block"><%= truncate(task.description, length: 50) %></small>
                <% end %>
              </td>
              <td><%= task.category.presence || '-' %></td>
              <td>
                <span class="badge <%= priority_badge_class(task.priority) %>">
                  <%= Task::PRIORITIES[task.priority].humanize.titleize %>
                </span>
              </td>
              <td>
                <span class="badge <%= status_badge_class(task.status) %>">
                  <%= task.status.humanize %>
                </span>
              </td>
              <td>
                <% if task.due_date %>
                  <%= task.due_date.strftime("%b %d, %Y") %>
                  <% if task.due_date < Date.today %>
                    <span class="badge bg-danger">Overdue</span>
                  <% end %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to edit_task_path(task), class: "btn btn-sm btn-outline-primary", title: "Edit", data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>

                  <%= link_to task_path(task), class: "btn btn-sm btn-outline-info", title: "View", data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
                    <i class="bi bi-eye"></i>
                  <% end %>

                  <%= button_to task_path(task), method: :delete,
                      class: "btn btn-sm btn-outline-danger", title: "Delete",
                      form: { data: { turbo_confirm: "Are you sure you want to delete this task?" } },
                      data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      You don't have any tasks yet. <%= link_to "Create your first task", new_task_path %>!
    </div>
  <% end %>
</div>

<% content_for :head do %>
  <script>
    document.addEventListener('turbo:load', function() {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
      })
    })
  </script>
<% end %>
