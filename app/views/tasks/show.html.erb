<div class="container mt-5">
  <div class="card shadow p-4">
    <h3 class="fw-bold"><%= @task.title %></h3>
    <p class="mt-3"><%= @task.description %></p>

    <small class="text-muted">Created on <%= @task.created_at.strftime("%b %d, %Y %I:%M %p") %></small>

    <div class="mt-4 d-flex gap-2">
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-primary" %>
      <%= link_to "Back", tasks_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Delete", task_path(@task), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
