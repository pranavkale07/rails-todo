<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Login</h2>
    
    <%= form_with(url: login_path, scope: :session, local: true, html: { class: "needs-validation" }) do |form| %>
      
      <div class="mb-3">
        <%= form.label :email, class: "form-label fw-bold" %>
        <%= form.email_field :email, class: "form-control", placeholder: "example@email.com" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label fw-bold" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="d-grid gap-2">
        <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <span>Don't have an account?</span> <%= link_to "Sign up", signup_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
